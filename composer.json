{
    "name": "prismphp/prismphp",
    "require": {
        "php": "^8.1",
        "vlucas/phpdotenv": "^5.5",
        "symfony/yaml": "^7.3",
        "psr/container": "^2.0",
        "php-di/php-di": "^7.0",
        "monolog/monolog": "^3.9",
        "bramus/monolog-colored-line-formatter": "~3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.12"
    },
    "autoload": {
        "psr-4": {
            "PrismPHP\\": "src/PrismPHP/",
            "PrismPHP\\Bundle\\": "src/Bundle/",
            "App\\": "src-app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PrismPHP\\Tests\\": "tests/"
        }
    }
}
